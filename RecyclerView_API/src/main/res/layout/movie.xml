<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hardrule"
        android:paddingBottom="24dp">

    <TextView
            android:id="@+id/movieTitle"
            android:text="Title"
            android:textSize="40sp"
            android:paddingTop="16dp"
            android:paddingBottom="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/originalTitleLabel"
            android:textSize="12sp"
            android:text="Original Title: "
            android:paddingStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
            app:layout_constraintBottom_toTopOf="@+id/movieDescription"/>

    <TextView
            android:id="@+id/originalTitle"
            android:textSize="12sp"
            android:text="Original Title"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/originalTitleLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle"/>

    <TextView
            android:id="@+id/movieDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Description"
            android:paddingStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/originalTitleLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/originalTitle"/>

</android.support.constraint.ConstraintLayout>