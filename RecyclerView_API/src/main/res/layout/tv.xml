<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:background="@drawable/hardrule">

    <TextView
            android:id="@+id/episodeTitle"
            android:text="Title"
            android:textSize="40sp"
            android:paddingTop="16dp"
            android:paddingBottom="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/firstAirLabel"
            android:textSize="12sp"
            android:text="First Aired: "
            android:paddingStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/episodeTitle"
            app:layout_constraintBottom_toTopOf="@+id/tvDescription"/>

    <TextView
            android:id="@+id/firstAir"
            android:textSize="12sp"
            android:text="First Aired"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/firstAirLabel"
            app:layout_constraintTop_toTopOf="@+id/firstAirLabel"
            app:layout_constraintTop_toBottomOf="@+id/firstAirLabel"
            app:layout_constraintBottom_toBottomOf="@+id/firstAirLabel"/>

    <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV Description"
            android:paddingStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/firstAirLabel"
            app:layout_constraintTop_toBottomOf="@+id/firstAir"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>